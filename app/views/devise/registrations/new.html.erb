<div class="container">

  <h2>Create an account</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html=>{:class=>"form-vertical"}) do |f| %>
      <%= devise_error_messages! %>

      <div class="control-group">
        <%= f.label :username, :class=>"hidden-label" %>
        <div class="controls">
          <%= f.text_field :username, :class=>"placeholder",  :placeholder =>"Username" %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :email, :class=>"hidden-label" %>
        <div class="control">
          <input type="email"  title="Your Email Address" id="email" name="email" required="required" aria-required="true"  class="placeholder" placeholder="Email" >
          <span class="help-inline hide success">Looks good! We'll send a confirmation</span>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :password, :class=>"hidden-label" %>
          <div class="control">
            <input type="password" placeholder="Password" title="Create a New Password" id="password" pattern=".{4,}" name="password" required="required" aria-required="true" data-invalid-message="Use a stronger password" class="placeholder">
        </div>
      </div>
      <div><%= f.submit "Sign up", :class=>"btn btn-success" %>

      <!--
      <%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %>
      -->
  <% end %>
</div>

